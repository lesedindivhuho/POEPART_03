<Window x:Class="POEPART_03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POEPART_03"
        mc:Ignorable="d"
        Title="Cybersecurity chatobot" Height="450" Width="800">
    <Grid Margin="10">
        
      
            
        <TextBlock x:Name="ChatOutputTextBlock" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top" 
                   Height="350" 
                   Width="760" 
                   Margin="10,10,10,0" 
                   Background="White" 
                   Text="Welcome to Cybersecurity Chatbot!" />

        <TextBox x:Name="UserInputTextBox" 
                 Height="30" 
                 Width="600" 
                 VerticalAlignment="Bottom" 
                 Margin="10,0,0,10" />

        <Button x:Name="SendButton" 
                Content="Send" 
                Height="30" 
                Width="80" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Right" 
                Margin="0,0,100,10" 
                Click="SendButton_Click" />

        <Button x:Name="ShowTasksButton" 
                Content="Show Tasks" 
                Height="30" 
                Width="100" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Left" 
                Margin="620,0,0,10" 
                Click="ShowTasksButton_Click" />

        <Button x:Name="ShowLogButton" 
                Content="Show Log" 
                Height="30" 
                Width="100" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Left" 
                Margin="500,0,0,10" 
                Click="ShowLogButton_Click" />

        <Button x:Name="StartQuizButton" 
                Content="Start Quiz" 
                Height="30" 
                Width="100" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Left" 
                Margin="380,0,0,10" 
                Click="StartQuizButton_Click" />

    </Grid>
</Window>
